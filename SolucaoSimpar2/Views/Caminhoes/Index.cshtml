@model IEnumerable<SolucaoSimpar2.Models.Caminhao>

@{
    ViewData["Title"] = "Caminhão";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Incluir um novo caminhão</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eixo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eixo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CaminhaoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CaminhaoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CaminhaoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
