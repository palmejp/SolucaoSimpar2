@model IEnumerable<SolucaoSimpar2.Models.Motorista>

@{
    ViewData["Title"] = "Motorista";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Incluir novo motorista</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrimeiroNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caminhao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrimeiroNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UltimoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caminhao.CaminhaoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MotoristaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MotoristaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.MotoristaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
