@model SolucaoSimpar2.ViewModel.MotoristaCreateModel

@{
    ViewData["Title"] = "Criar";
}

@if(null != TempData["alertMessage"])
    {
        <script type="text/javascript">
            alert('@(TempData["alertMessage"])');
            window.location.href="@Url.Action("Index", "Home")";
    </script>
}
else
{
    <h1>Motorista</h1>

    <h4>Criar motorista</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Motorista.PrimeiroNome" class="control-label"></label>
                    <input asp-for="@Model.Motorista.PrimeiroNome" class="form-control" />
                    <span asp-validation-for="@Model.Motorista.PrimeiroNome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Motorista.UltimoNome" class="control-label"></label>
                    <input asp-for="@Model.Motorista.UltimoNome" class="form-control" />
                    <span asp-validation-for="@Model.Motorista.UltimoNome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Motorista.CaminhaoId" class="control-label"></label>
                    <select asp-for="@Model.Motorista.CaminhaoId" class="form-control" asp-items="@Model.Caminhoes"> 
                        <option value="">Selecione um caminhão</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Motorista.Endereco" class="control-label"></label>
                    <input asp-for="@Model.Motorista.Endereco" class="form-control" />
                    <span asp-validation-for="@Model.Motorista.Endereco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar para a lista</a>
    </div>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
